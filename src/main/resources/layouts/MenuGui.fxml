fx:controller="globaloutbreak.view.scenecontroller.MainController" stylesheets="css/menu-style.css">
	<children>
	   <Button fx:id="newGameButton" onMouseClicked="#chooseDiseaseName" text="Nuova Partita">
         <font>
            <Font size="16.0" />
         </font></Button>
         <Button fx:id="tutorialButton" onMouseClicked="#openTutorial" text="Come si gioca">
         <font>
            <Font size="16.0" />
         </font></Button>
         <Button fx:id="quitButton" onMouseClicked="#quitGame" text="Esci">
         <font>
            <Font size="16.0" />
         </font></Button>
	</children>
</VBox>